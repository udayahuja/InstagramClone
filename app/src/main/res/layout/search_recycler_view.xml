<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/friends_profile_pic"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friends_username"
        android:layout_width="205dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/friends_profile_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friends_name"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:paddingLeft="2dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="name of friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friends_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/friends_username" />

    <Button
        android:id="@+id/friend_follow_button"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:text="Follow"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>